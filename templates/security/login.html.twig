{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoCreatorsHub{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="text-primary">ðŸŽ¨ Connexion</h2>
                        <p class="text-muted">AccÃ©dez Ã  votre compte EcoCreatorsHub</p>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" 
                                   value="{{ last_username }}" 
                                   name="email" 
                                   id="inputEmail" 
                                   class="form-control" 
                                   autocomplete="email" 
                                   required 
                                   autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" 
                                   name="password" 
                                   id="inputPassword" 
                                   class="form-control" 
                                   autocomplete="current-password" 
                                   required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid mb-3">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <p class="mb-0">Pas encore de compte ?</p>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-success">
                            <i class="fas fa-user-plus me-2"></i>CrÃ©er un compte
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}