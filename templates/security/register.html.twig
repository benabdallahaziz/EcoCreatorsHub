{% extends 'base.html.twig' %}

{% block title %}Inscription - EcoCreatorsHub{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="text-primary">üå± Rejoignez EcoCreatorsHub</h2>
                        <p class="text-muted">Cr√©ez votre compte et partagez votre art √©cologique</p>
                    </div>

                    {{ form_start(registrationForm) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.username) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        {{ form_errors(registrationForm.plainPassword) }}

                        <div class="mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="form-check">
                                        {{ form_widget(registrationForm.isArtist, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(registrationForm.isArtist, null, {'label_attr': {'class': 'form-check-label fw-bold text-success'}}) }}
                                    </div>
                                    <small class="text-muted">{{ form_help(registrationForm.isArtist) }}</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Cr√©er mon compte
                            </button>
                        </div>
                    {{ form_end(registrationForm) }}

                    <div class="text-center">
                        <p class="mb-0">D√©j√† un compte ?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}