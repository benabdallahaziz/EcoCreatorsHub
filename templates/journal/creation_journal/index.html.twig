        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filtres & Recherche</h5>
                </div>
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <label class="form-label fw-bold"><i class="fas fa-sort me-1"></i>Trier par</label>
                            <select name="sort" class="form-select" onchange="this.form.submit()">
                                <option value="recent" {{ current_sort == 'recent' ? 'selected' : '' }}>üïí Plus r√©cents</option>
                                <option value="popular" {{ current_sort == 'popular' ? 'selected' : '' }}>üî• Plus populaires</option>
                                <option value="oldest" {{ current_sort == 'oldest' ? 'selected' : '' }}>üìÖ Plus anciens</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <label class="form-label fw-bold"><i class="fas fa-tags me-1"></i>Cat√©gorie</label>
                            <select name="category" class="form-select" onchange="this.form.submit()">
                                <option value="">üé® Toutes les cat√©gories</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}" {{ current_category == category.id ? 'selected' : '' }}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label fw-bold"><i class="fas fa-search me-1"></i>Recherche</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-search text-muted"></i>
                                </span>
                                <input type="text" name="q" id="searchInput" class="form-control border-start-0" placeholder="Rechercher par titre, artiste, technique..." value="{{ app.request.get('q') }}">
                                <button class="btn btn-primary" type="submit">
                                    Rechercher
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Grille des Journaux -->
    {% if creation_journals|length > 0 %}
        <div class="row g-4">
            {% for journal in creation_journals %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 journal-card" style="transition: all 0.3s ease;">
                        <!-- Image de couverture avec overlay -->
                        <div class="position-relative overflow-hidden" style="height: 220px;">
                            {% if journal.images|length > 0 %}
                                <img src="{{ asset('uploads/journals/' ~ journal.images[0]) }}" 
                                     class="card-img-top h-100 w-100" 
                                     style="object-fit: cover;" 
                                     alt="{{ journal.title }}">
                            {% else %}
                                <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center h-100" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                                    <i class="fas fa-palette fa-4x text-muted opacity-50"></i>
                                </div>
                            {% endif %}
                            <!-- Overlay avec badges -->
                            <div class="position-absolute top-0 start-0 p-3">
                                {% if journal.category %}
                                    <span class="badge bg-primary bg-opacity-90 shadow-sm">{{ journal.category.name }}</span>
                                {% endif %}
                            </div>
                            <div class="position-absolute top-0 end-0 p-3">
                                {% if journal.isPublished %}
                                    <span class="badge bg-success bg-opacity-90 shadow-sm"><i class="fas fa-eye me-1"></i>Publi√©</span>
                                {% else %}
                                    <span class="badge bg-warning bg-opacity-90 shadow-sm"><i class="fas fa-edit me-1"></i>Brouillon</span>
                                {% endif %}
                            </div>
                            <!-- Score √©cologique fictif -->
                            <div class="position-absolute bottom-0 start-0 p-3">
                                <div class="bg-success bg-opacity-90 text-white px-2 py-1 rounded-pill small shadow-sm">
                                    <i class="fas fa-leaf me-1"></i>√âco-Score: {{ random(7, 10) }}/10
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-body p-4">
                            <!-- Titre et artiste -->
                            <div class="mb-3">
                                <h5 class="card-title fw-bold mb-2 text-truncate">{{ journal.title }}</h5>
                                <div class="d-flex align-items-center text-muted mb-2">
                                    <div class="bg-light rounded-circle p-2 me-2">
                                        <i class="fas fa-user fa-sm"></i>
                                    </div>
                                    <span class="small">{{ journal.artist ? journal.artist.name : 'Artiste Anonyme' }}</span>
                                    {% if journal.artist and journal.artist.isCertified %}
                                        <i class="fas fa-certificate text-success ms-1" title="Artiste certifi√©"></i>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <!-- Description -->
                            <p class="card-text text-muted small mb-3" style="line-height: 1.5;">
                                {{ journal.description|slice(0, 120) }}{% if journal.description|length > 120 %}...{% endif %}
                            </p>
                            
                            <!-- M√©tadonn√©es -->
                            <div class="row g-2 mb-3 small text-muted">
                                <div class="col-6">
                                    <i class="fas fa-list-ol me-1 text-primary"></i>{{ journal.steps|length }} √©tapes
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-calendar me-1 text-primary"></i>{{ journal.date|date('d/m/Y') }}
                                </div>
                            </div>
                            
                            <!-- Actions sociales -->
                            <div class="d-flex justify-content-between align-items-center">
                                {% if is_granted('ROLE_USER') %}
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-danger like-btn" data-journal-id="{{ journal.id }}" title="J'aime">
                                            <i class="fas fa-heart"></i> <span class="like-count">{{ journal_stats[journal.id].likes ?? 0 }}</span>
                                        </button>
                                        <button class="btn btn-outline-primary" title="Commentaires">
                                            <i class="fas fa-comment"></i> 0
                                        </button>
                                        <button class="btn btn-outline-secondary" title="Partager">
                                            <i class="fas fa-share"></i>
                                        </button>
                                    </div>
                                {% endif %}
                                <div class="text-end">
                                    <small class="text-muted">{{ journal_stats[journal.id].views ?? 0 }} vues</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent border-0 p-4 pt-0">
                            <div class="d-grid gap-2">
                                <a href="{{ path('journal_show', {id: journal.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-book-open me-2"></i>D√©couvrir le processus
                                </a>
                                {% if is_granted('ROLE_ARTIST') and journal.artist and journal.artist.user == app.user %}
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('journal_edit', {id: journal.id}) }}" class="btn btn-outline-secondary">
                                            <i class="fas fa-edit me-1"></i>√âditer
                                        </a>
                                        <a href="{{ path('journal_add_step', {id: journal.id}) }}" class="btn btn-outline-success">
                                            <i class="fas fa-plus me-1"></i>√âtape
                                        </a>
                                    </div>
                                {% elseif is_granted('ROLE_ADMIN') %}
                                    <div class="btn-group btn-group-sm">
                                        <span class="badge bg-warning text-dark mb-1">üëë Admin</span>
                                        <form method="post" action="{{ path('journal_delete', {id: journal.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer ce journal ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ journal.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash me-1"></i>Supprimer
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination Am√©lior√©e -->
        {% if total_pages > 1 %}
            <div class="d-flex justify-content-center mt-5">
                <nav aria-label="Navigation des pages">
                    <div class="text-center mb-3">
                        <span class="text-muted">
                            <i class="fas fa-info-circle me-2"></i>
                            Page {{ current_page }} sur {{ total_pages }} ({{ total_items }} journaux)
                        </span>
                    </div>
                    
                    <ul class="pagination gap-2 mb-0">
                    {% if current_page > 1 %}
                        <li class="page-item">
                            <a class="page-link px-4 py-2 rounded-pill" href="{{ path('journal_index', {page: current_page - 1, sort: current_sort, category: current_category}) }}">
                                <i class="fas fa-chevron-left"></i> Pr√©c√©dent
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link px-4 py-2 rounded-pill"><i class="fas fa-chevron-left"></i> Pr√©c√©dent</span>
                        </li>
                    {% endif %}
                    
                    {% set start_page = max(1, current_page - 2) %}
                    {% set end_page = min(total_pages, current_page + 2) %}
                    
                    {% if start_page > 1 %}
                        <li class="page-item">
                            <a class="page-link rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;" href="{{ path('journal_index', {page: 1, sort: current_sort, category: current_category}) }}">1</a>
                        </li>
                        {% if start_page > 2 %}
                            <li class="page-item disabled"><span class="page-link border-0 bg-transparent">...</span></li>
                        {% endif %}
                    {% endif %}
                    
                    {% for page in start_page..end_page %}
                        {% if page == current_page %}
                            <li class="page-item active">
                                <span class="page-link rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border: none;">
                                    {{ page }}
                                    <span class="visually-hidden">(actuelle)</span>
                                </span>
                            </li>
                        {% else %}
                            <li class="page-item">
                                <a class="page-link rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;" href="{{ path('journal_index', {page: page, sort: current_sort, category: current_category}) }}">{{ page }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                    
                    {% if end_page < total_pages %}
                        {% if end_page < total_pages - 1 %}
                            <li class="page-item disabled"><span class="page-link border-0 bg-transparent">...</span></li>
                        {% endif %}
                        <li class="page-item">
                            <a class="page-link rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;" href="{{ path('journal_index', {page: total_pages, sort: current_sort, category: current_category}) }}">{{ total_pages }}</a>
                        </li>
                    {% endif %}
                    
                    {% if current_page < total_pages %}
                        <li class="page-item">
                            <a class="page-link px-4 py-2 rounded-pill" href="{{ path('journal_index', {page: current_page + 1, sort: current_sort, category: current_category}) }}">
                                Suivant <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link px-4 py-2 rounded-pill">Suivant <i class="fas fa-chevron-right"></i></span>
                        </li>
                    {% endif %}
                    </ul>
                </nav>
            </div>
        {% endif %}
    {% else %}
        <div class="text-center py-5">
            <i class="fas fa-book-open fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">Aucun journal trouv√©</h3>
            <p class="text-muted">{% if is_granted('ROLE_ARTIST') %}Cr√©ez votre premier journal de cr√©ation !{% else %}Revenez bient√¥t pour d√©couvrir de nouveaux journaux.{% endif %}</p>
            {% if is_granted('ROLE_ARTIST') %}
                <a href="{{ path('journal_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Cr√©er un Journal
                </a>
            {% endif %}
        </div>
    {% endif %}
</div>

