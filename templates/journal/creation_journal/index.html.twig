        </div>
    </div>
</div>

<div class="container py-4" id="journals">

    <!-- Admin Dashboard -->
    {% if is_granted('ROLE_ADMIN') %}
        <div class="alert alert-warning border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-crown fa-2x text-warning me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">üëë Mode Administrateur</h5>
                    <p class="mb-0">Vous avez acc√®s aux contr√¥les administrateur pour g√©rer tous les journaux.</p>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 bg-light text-center p-3 stats-card">
                <i class="fas fa-book text-primary fa-2x mb-2"></i>
                <h4 class="text-primary">{{ total_items }}</h4>
                <small class="text-muted">Journaux disponibles</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-light text-center p-3 stats-card">
                <i class="fas fa-users text-success fa-2x mb-2"></i>
                <h4 class="text-success">{{ categories|length }}</h4>
                <small class="text-muted">Cat√©gories</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-light text-center p-3 stats-card">
                <i class="fas fa-leaf text-info fa-2x mb-2"></i>
                <h4 class="text-info">100%</h4>
                <small class="text-muted">√âcologique</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-light text-center p-3 stats-card">
                <i class="fas fa-heart text-danger fa-2x mb-2"></i>
                <h4 class="text-danger">‚àû</h4>
                <small class="text-muted">Inspiration</small>
            </div>
        </div>
    </div>

    <!-- Filtres et Tri am√©lior√©s -->
