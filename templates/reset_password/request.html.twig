{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - EcoCreatorsHub{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h2 class="h4 mb-0">
                            <i class="fas fa-key me-2"></i>Réinitialiser mon mot de passe
                        </h2>
                    </div>

                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="fas fa-check-circle me-2"></i>{{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        <p class="text-muted mb-4">
                            Entrez votre adresse email pour recevoir un lien de réinitialisation.
                        </p>

                        <form method="post" action="{{ path('app_forgot_password_handle') }}">
                            <div class="mb-3">
                                <label for="email" class="form-label">Votre email</label>
                                <input type="email" class="form-control" id="email" name="email" required
                                       placeholder="exemple@email.com" value="{{ app.request.request.get('email', '') }}">
                                <div class="form-text">
                                    Nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Envoyer le lien
                                </button>
                                <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}