<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}EcoCreatorsHub - Plateforme d'Art Écologique{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}
        <!-- Google Web Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

        <!-- Icon Font Stylesheet -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

        <!-- Libraries Stylesheet -->
        <link href="{{ asset('lib/lightbox/css/lightbox.min.css') }}" rel="stylesheet">
        <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">

        <!-- Bootstrap Stylesheet -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Template Stylesheet -->
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body style="background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 50%, #a5d6a7 100%); background-attachment: fixed;">
<!-- Spinner -->
<div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" role="status"></div>
</div>

{% block header %}
    <!-- Navbar -->
    <div class="container-fluid fixed-top">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-leaf me-2 text-secondary"></i> <a href="#" class="text-white">Art Écologique & Durable</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">contact@ecocreatorshub.com</a></small>
                </div>
                <div class="top-link pe-2">
                    <a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
                    <a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
                    <a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
                </div>
            </div>
        </div>
        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a href="{{ path('app_home') }}" class="navbar-brand">
                    <h1 class="text-primary display-6">EcoCreatorsHub</h1>
                </a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a href="{{ path('app_home') }}" class="nav-item nav-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}">Accueil</a>
                        <a href="{{ path('app_artists') }}" class="nav-item nav-link {{ app.request.get('_route') == 'app_artists' ? 'active' : '' }}">Artistes</a>
                        <a href="{{ path('app_journals') }}" class="nav-item nav-link {{ app.request.get('_route') starts with 'journal_' ? 'active' : '' }}">Journaux</a>
                        <a href="{{ path('technique_index') }}" class="nav-item nav-link {{ app.request.get('_route') starts with 'technique_' ? 'active' : '' }}">Techniques</a>
                        <a href="{{ path('eco_tip_index') }}" class="nav-item nav-link {{ app.request.get('_route') starts with 'eco_tip_' ? 'active' : '' }}">Astuces Éco</a>
                        <a href="{{ path('app_materials') }}" class="nav-item nav-link {{ app.request.get('_route') == 'app_materials' ? 'active' : '' }}">Matériaux</a>
                        <a href="{{ path('app_tutorials') }}" class="nav-item nav-link {{ app.request.get('_route') == 'app_tutorials' ? 'active' : '' }}">Tutoriels</a>
                    </div>
                    <div class="d-flex m-3 me-0 align-items-center">
                        <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="fas fa-search text-primary"></i>
                        </button>

                        {# User area: show username and logout when logged in, else show login/register links #}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <div class="dropdown">
                                <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle fa-2x me-2"></i>
                                    <strong>{{ app.user.username }}</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Mon profil</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_journals') }}"><i class="fas fa-book me-2"></i>Mes journaux</a></li>
                                    {% if is_granted('ROLE_ARTIST') %}
                                        <li><a class="dropdown-item" href="{{ path('journal_new') }}"><i class="fas fa-plus me-2"></i>Nouveau journal</a></li>
                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}"><i class="fas fa-cog me-2"></i>Administration</a></li>
                                    {% endif %}
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}"
                                           onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
                                            <i class="fas fa-sign-out-alt me-2"></i>Se déconnecter
                                        </a>
                                    </li>
                                </ul>
                                <form id="logout-form" action="{{ path('app_logout') }}" method="post" style="display:none;">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                                </form>
                            </div>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-sm btn-primary me-2">Login</a>
                            <a href="{{ path('app_register') }}" class="btn btn-sm btn-success">Register</a>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <form action="{{ path('journal_search') }}" method="GET" class="input-group w-75 mx-auto d-flex">
                        <input type="search" name="q" class="form-control p-3" placeholder="Rechercher des journaux, artistes..." aria-describedby="search-icon-1">
                        <button type="submit" class="input-group-text p-3 btn btn-primary"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

<!-- Main Content with proper spacing -->
<div style="padding-top: 120px; min-height: 100vh;">
    <div class="container mt-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    {% block body %}{% endblock %}
</div>

{% block footer %}
    <!-- Footer -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-4 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Pourquoi nous choisir ?</h4>
                        <p class="mb-4">Une communauté d'artistes engagés pour un art respectueux de l'environnement.</p>
                        <a href="" class="btn border-secondary py-2 px-4 rounded-pill text-primary">Read More</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Liens Utiles</h4>
                        <a class="btn-link" href="{{ path('app_about') }}">À Propos</a>
                        <a class="btn-link" href="{{ path('app_contact') }}">Contact</a>
                        <a class="btn-link" href="{{ path('app_artists') }}">Nos Artistes</a>
                        <a class="btn-link" href="{{ path('app_journals') }}">Journaux de Création</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Contact</h4>
                        <p>Adresse: Paris, France</p>
                        <p>Email: contact@ecocreatorshub.com</p>
                        <p>Téléphone: +33 1 23 45 67 89</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Copyright -->
    <div class="container-fluid copyright bg-dark py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <span class="text-light"><i class="fas fa-copyright text-light me-2"></i>EcoCreatorsHub, All right reserved.</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>
{% endblock %}

<!-- JavaScript Libraries -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Vérifiez que ces fichiers existent dans public/lib/ -->
<script src="{{ asset('lib/easing/easing.min.js') }}"></script>
<script src="{{ asset('lib/waypoints/waypoints.min.js') }}"></script>
<script src="{{ asset('lib/lightbox/js/lightbox.min.js') }}"></script>
<script src="{{ asset('lib/owlcarousel/owl.carousel.min.js') }}"></script>

<!-- Template Javascript -->
<script src="{{ asset('js/main.js') }}"></script>
</body>
</html>