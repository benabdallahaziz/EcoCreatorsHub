{# templates/admin/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin - EcoCreatorsHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-dashboard {
            min-height: calc(100vh - 150px);
            padding: 2rem 0;
        }

        .dashboard-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 3rem;
            border-radius: 0 0 15px 15px;
        }

        .card-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .admin-card {
            transition: all 0.3s;
            border: none;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border-radius: 15px;
            overflow: hidden;
        }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

        .admin-card .card-body {
            padding: 2rem;
            text-align: center;
        }

        .admin-card a {
            color: inherit;
            text-decoration: none;
        }

        .card-user {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

        .card-artist {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
        }

        .card-logout {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            color: white;
        }

        .card-stats {
            background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
            color: white;
        }

        .welcome-message {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        .quick-stats {
            background: rgba(255,255,255,0.1);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-dashboard">
        <div class="dashboard-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="display-4 mb-3">
                            <i class="fas fa-shield-alt me-3"></i>Tableau de bord Administrateur
                        </h1>
                        <p class="welcome-message">
                            Bonjour <strong>{{ app.user.username }}</strong> !
                            Bienvenue dans l'interface d'administration.
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="quick-stats d-inline-block">
                            <div class="small">
                                <i class="fas fa-clock me-1"></i> {{ 'now'|date('d/m/Y H:i') }}
                            </div>
                            <div class="small">
                                <i class="fas fa-user-shield me-1"></i> Administrateur
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row g-4">
                <!-- Gestion des utilisateurs -->
                <div class="col-md-6 col-lg-3">
                    <div class="admin-card card-user">
                        <a href="{{ path('app_admin_user_index') }}">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h3 class="h4 mb-3">Gérer les utilisateurs</h3>
                                <p class="mb-0">
                                    Créer, modifier et gérer les comptes utilisateurs
                                </p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Gestion des artistes -->
                <div class="col-md-6 col-lg-3">
                    <div class="admin-card card-artist">
                        <a href="{{ path('app_admin_artist_index') }}">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-palette"></i>
                                </div>
                                <h3 class="h4 mb-3">Gérer les artistes</h3>
                                <p class="mb-0">
                                    Gérer les profils artistes et les certifications
                                </p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Statistiques -->
                <div class="col-md-6 col-lg-3">
                    <div class="admin-card card-stats">
                        <a href="{{ path('app_admin_artist_stats') }}">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-chart-bar"></i>
                                </div>
                                <h3 class="h4 mb-3">Statistiques</h3>
                                <p class="mb-0">
                                    Voir les statistiques et rapports détaillés
                                </p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Déconnexion -->
                <div class="col-md-6 col-lg-3">
                    <div class="admin-card card-logout">
                        <a href="{{ path('app_logout') }}">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-sign-out-alt"></i>
                                </div>
                                <h3 class="h4 mb-3">Déconnexion</h3>
                                <p class="mb-0">
                                    Se déconnecter de l'administration
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Panneau d'actions rapides -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2"></i>Actions rapides
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <a href="{{ path('app_admin_user_new') }}" class="btn btn-primary w-100">
                                        <i class="fas fa-user-plus me-2"></i>Nouvel utilisateur
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <a href="{{ path('app_admin_artist_new') }}" class="btn btn-success w-100">
                                        <i class="fas fa-plus-circle me-2"></i>Nouvel artiste
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <a href="{{ path('app_admin_user_index') }}?sort=recent" class="btn btn-info w-100">
                                        <i class="fas fa-history me-2"></i>Utilisateurs récents
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <a href="{{ path('app_admin_artist_index') }}?certified=false" class="btn btn-warning w-100">
                                        <i class="fas fa-certificate me-2"></i>Artistes non certifiés
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informations système -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>Informations système
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 text-center mb-3">
                                    <div class="h4 text-primary mb-1">{{ 'now'|date('H:i') }}</div>
                                    <small class="text-muted">Heure actuelle</small>
                                </div>
                                <div class="col-md-3 text-center mb-3">
                                    <div class="h4 text-success mb-1">{{ 'now'|date('d/m/Y') }}</div>
                                    <small class="text-muted">Date actuelle</small>
                                </div>
                                <div class="col-md-3 text-center mb-3">
                                    <div class="h4 text-info mb-1">
                                        <i class="fas fa-user-shield"></i>
                                    </div>
                                    <small class="text-muted">Rôle: Admin</small>
                                </div>
                                <div class="col-md-3 text-center mb-3">
                                    <div class="h4 text-warning mb-1">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    <small class="text-muted">Session sécurisée</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mettre à jour l'heure en temps réel
            function updateTime() {
                const now = new Date();
                const timeElement = document.querySelector('.h4.text-primary');
                if (timeElement) {
                    const hours = now.getHours().toString().padStart(2, '0');
                    const minutes = now.getMinutes().toString().padStart(2, '0');
                    timeElement.textContent = `${hours}:${minutes}`;
                }
            }

            // Mettre à jour l'heure toutes les minutes
            updateTime();
            setInterval(updateTime, 60000);

            // Animation des cartes
            const cards = document.querySelectorAll('.admin-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
{% endblock %}