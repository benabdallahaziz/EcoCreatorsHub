{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Carte statistique : Artistes -->
            <div class="col-md-6 col-lg-3">
                <div class="admin-card card-stats">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="fas fa-paint-brush"></i>
                        </div>
                        <h3 class="h4 mb-3">Artistes</h3>
                        <p class="mb-0">Total : {{ total_artists }}</p>
                        <p class="mb-0">Certifiés : {{ certified_artists }}</p>
                    </div>
                </div>
            </div>

            <!-- Carte Statistiques (sans lien pour éviter l'erreur de route) -->
            <div class="col-md-6 col-lg-3">
                <div class="admin-card card-stats">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h3 class="h4 mb-3">Statistiques</h3>
                        <p class="mb-0 text-muted">Lien non disponible</p>
                    </div>
                </div>
            </div>

            <!-- Ajoute d'autres cartes ici si nécessaire -->
        </div>
    </div>

    <style>
        .admin-card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58,59,69,0.15);
            border-radius: 0.35rem;
            margin-bottom: 1.5rem;
            transition: transform 0.2s;
        }
        .admin-card:hover {
            transform: translateY(-3px);
        }
        .card-stats .card-body {
            padding: 1rem;
            text-align: center;
        }
        .card-icon {
            font-size: 2rem;
            color: #4e73df;
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}
