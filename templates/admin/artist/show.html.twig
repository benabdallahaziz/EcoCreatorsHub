{% extends 'base.html.twig' %}

{% block title %}Détails de l'artiste - {{ artist.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 10px;
            padding: 2rem;
            color: white;
            margin-bottom: 2rem;
        }
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
            font-weight: bold;
            color: #667eea;
            border: 4px solid white;
        }
        .stat-card {
            border-radius: 10px;
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .badge-list {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }
        .creation-item {
            border-left: 4px solid #667eea;
            padding-left: 15px;
            margin-bottom: 15px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_admin_artist_index') }}">Artistes</a>
                        </li>
                        <li class="breadcrumb-item active">Détails</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-0">
                    <i class="fas fa-palette me-2"></i>Détails de l'artiste
                </h1>
            </div>
            <div class="btn-group">
                <a href="{{ path('app_admin_artist_edit', {'id': artist.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Modifier
                </a>
                <a href="{{ path('app_admin_artist_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
        </div>

        {# En-tête du profil #}
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-auto">
                    <div class="profile-avatar">
                        {{ artist.name|slice(0, 2)|upper }}
                    </div>
                </div>
                <div class="col">
                    <h2 class="mb-1">{{ artist.name }}</h2>
                    <p class="mb-0 opacity-75">
                        {% if artist.isCertified %}
                            <i class="fas fa-certificate me-1"></i>Artiste certifié
                        {% else %}
                            Artiste non certifié
                        {% endif %}
                    </p>
                    <p class="mb-0 opacity-75">
                        <i class="fas fa-calendar me-1"></i>Inscrit le {{ artist.createdAt|date('d/m/Y') }}
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            {# Informations principales #}
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informations</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Nom de l'artiste</label>
                                <p class="h6">{{ artist.name }}</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Technique écologique</label>
                                <p class="h6">
                                    <span class="badge bg-info">{{ artist.ecoTechnique }}</span>
                                </p>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label text-muted">Biographie</label>
                                <div class="border rounded p-3 bg-light">
                                    {{ artist.bio|nl2br }}
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Date de création</label>
                                <p class="h6">{{ artist.createdAt|date('d/m/Y H:i') }}</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Statut</label>
                                <p class="h6">
                                    {% if artist.isCertified %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-certificate me-1"></i>Certifié
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning">Non certifié</span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Utilisateur associé #}
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Utilisateur associé</h5>
                    </div>
                    <div class="card-body">
                        {% if artist.user %}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Username</label>
                                    <p class="h6">{{ artist.user.username }}</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Email</label>
                                    <p class="h6">{{ artist.user.email }}</p>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Aucun utilisateur associé à cet artiste
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Statistiques et actions #}
            <div class="col-lg-4">
                {# Statistiques #}
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistiques</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6 mb-3">
                                <div class="stat-card p-3 bg-light">
                                    <div class="h2 text-primary mb-1">{{ artist.creationJournals|length }}</div>
                                    <small class="text-muted">Journaux de création</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="stat-card p-3 bg-light">
                                    <div class="h2 text-info mb-1">{{ artist.tutorials|length }}</div>
                                    <small class="text-muted">Tutoriels</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-card p-3 bg-light">
                                    <div class="h2 text-warning mb-1">{{ artist.certificationRequests|length }}</div>
                                    <small class="text-muted">Demandes de certification</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Actions rapides #}
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            {% if artist.isCertified %}
                                <form action="{{ path('app_admin_artist_toggle_certification', {'id': artist.id}) }}" method="post" class="d-grid">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle-certification' ~ artist.id) }}">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-times-circle me-2"></i>Retirer la certification
                                    </button>
                                </form>
                            {% else %}
                                <form action="{{ path('app_admin_artist_toggle_certification', {'id': artist.id}) }}" method="post" class="d-grid">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle-certification' ~ artist.id) }}">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-certificate me-2"></i>Certifier l'artiste
                                    </button>
                                </form>
                            {% endif %}

                            <a href="{{ path('app_admin_artist_edit', {'id': artist.id}) }}" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Modifier l'artiste
                            </a>

                            <form action="{{ path('app_admin_artist_delete', {'id': artist.id}) }}" method="post" class="d-grid"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet artiste ? Cette action est irréversible.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artist.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Supprimer l'artiste
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}