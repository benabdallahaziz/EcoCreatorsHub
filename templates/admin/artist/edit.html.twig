{% extends 'base.html.twig' %}

{% block title %}Modifier l'artiste {{ artist.name }}{% endblock %}

{% block body %}
    <div class="container py-5">

        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_admin_artist_index') }}">Artistes</a>
                </li>
                <li class="breadcrumb-item active">Modifier</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h1 class="h4 mb-0">
                            <i class="fas fa-edit me-2"></i>Modifier l'artiste
                        </h1>
                        <small class="text-muted">ID #{{ artist.id }}</small>
                    </div>

                    <div class="card-body">

                        {% for type in ['success','error','warning'] %}
                            {% for message in app.flashes(type) %}
                                <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        {{ form_errors(form) }}

                        {% include 'admin/artist/_form.html.twig' %}

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_admin_artist_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Annuler
                            </a>

                            <button class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Mettre Ã  jour
                            </button>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
