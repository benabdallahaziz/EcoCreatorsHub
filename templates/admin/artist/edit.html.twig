{% extends 'base.html.twig' %}

{% block title %}Modifier {{ artist.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-section {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        .form-section h4 {
            color: #495057;
            border-bottom: 2px solid #dee2e6;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }
        .avatar-preview {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 36px;
            font-weight: bold;
            margin: 0 auto;
            border: 4px solid #fff;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .current-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #dee2e6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_admin_artist_index') }}">Artistes</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_admin_artist_show', {'id': artist.id}) }}">{{ artist.name }}</a>
                        </li>
                        <li class="breadcrumb-item active">Modifier</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-0">
                    <i class="fas fa-edit me-2"></i>Modifier {{ artist.name }}
                </h1>
            </div>
            <div class="btn-group">
                <a href="{{ path('app_admin_artist_show', {'id': artist.id}) }}" class="btn btn-info">
                    <i class="fas fa-eye me-2"></i>Voir
                </a>
                <a href="{{ path('app_admin_artist_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Modifier les informations</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="row mb-4">
                            <div class="col-md-4 text-center">
                                {% if artist.profilePicture %}
                                    <img src="{{ artist.profilePicture }}"
                                         alt="{{ artist.name }}"
                                         class="current-avatar mb-3">
                                    <div class="small text-muted">
                                        Avatar actuel
                                    </div>
                                {% else %}
                                    <div class="avatar-preview mb-3" id="avatarPreview">
                                        {{ artist.name|slice(0, 2)|upper }}
                                    </div>
                                    <div class="small text-muted">
                                        Avatar généré à partir des initiales
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-8">
                                <div class="form-section">
                                    <h4>Informations de base</h4>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.name, {'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Nom de l\'artiste',
                                                'oninput': 'updateAvatarPreview(this.value)'
                                            }}) }}
                                            {{ form_errors(form.name) }}
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.ecoTechnique, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.ecoTechnique, {'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Ex: Recyclage, Upcycling, etc.'
                                            }}) }}
                                            {{ form_errors(form.ecoTechnique) }}
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.user, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.user, {'attr': {
                                                'class': 'form-control form-select',
                                                'placeholder': 'Sélectionner un utilisateur'
                                            }}) }}
                                            {{ form_errors(form.user) }}
                                            <div class="form-text">L'utilisateur ne doit pas déjà avoir un profil artiste</div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.isCertified, null, {'label_attr': {'class': 'form-label'}}) }}
                                            <div class="form-check form-switch mt-2">
                                                {{ form_widget(form.isCertified, {'attr': {
                                                    'class': 'form-check-input',
                                                    'role': 'switch'
                                                }}) }}
                                                <label class="form-check-label" for="{{ form.isCertified.vars.id }}">
                                                    Artiste certifié
                                                </label>
                                            </div>
                                            {{ form_errors(form.isCertified) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-section">
                            <h4>Biographie</h4>
                            <div class="mb-3">
                                {{ form_label(form.bio, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.bio, {'attr': {
                                    'class': 'form-control',
                                    'rows': 8,
                                    'placeholder': 'Décrivez le parcours, les techniques et l\'approche écologique de l\'artiste...'
                                }}) }}
                                {{ form_errors(form.bio) }}
                            </div>
                        </div>

                        <div class="form-section">
                            <h4>Photo de profil</h4>
                            <div class="mb-3">
                                {{ form_label(form.profilePicture, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.profilePicture, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'URL de l\'image de profil'
                                }}) }}
                                {{ form_errors(form.profilePicture) }}
                                <div class="form-text">
                                    Laissez vide pour utiliser les initiales. URL complète vers une image.
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_admin_artist_show', {'id': artist.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function updateAvatarPreview(name) {
            const preview = document.getElementById('avatarPreview');
            if (preview && name && name.length >= 2) {
                preview.textContent = name.substring(0, 2).toUpperCase();
            }
        }

        // Initialiser l'avatar avec la valeur actuelle
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.querySelector('#{{ form.name.vars.id }}');
            if (nameInput && document.getElementById('avatarPreview')) {
                updateAvatarPreview(nameInput.value);
            }
        });
    </script>
{% endblock %}