{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Forcer Bootstrap même si le thème ne le charge pas #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* Styles spécifiques admin */
        .table th {
            background-color: #f8f9fa;
            border-top: 2px solid #dee2e6;
            font-weight: 600;
        }

        .table td {
            vertical-align: middle;
        }

        .badge-sm {
            font-size: 0.75em;
            padding: 0.25em 0.6em;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0,0,0,.125);
            font-weight: 600;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        /* Correction pour le footer fixe */
        body {
            background: #f8f9fa !important;
        }

        .container-fluid {
            padding-bottom: 100px;
        }

        /* Amélioration des filtres */
        .form-select, .form-control {
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
        }

        .form-select:focus, .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        /* Pagination */
        .pagination .page-link {
            color: #495057;
        }

        .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 80px;">
        {# En-tête #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="fas fa-users-cog me-2"></i>Gestion des utilisateurs
            </h1>
            <a href="{{ path('app_admin_user_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nouvel utilisateur
            </a>
        </div>

        {# Messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {# Filtres #}
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Recherche</label>
                        <input type="text" class="form-control" id="search" name="search"
                               value="{{ app.request.query.get('search', '') }}" placeholder="Email ou nom d'utilisateur...">
                    </div>
                    <div class="col-md-3">
                        <label for="role" class="form-label">Rôle</label>
                        <select class="form-select" id="role" name="role">
                            <option value="">Tous les rôles</option>
                            <option value="ROLE_USER" {{ app.request.query.get('role') == 'ROLE_USER' ? 'selected' : '' }}>Utilisateur</option>
                            <option value="ROLE_ARTIST" {{ app.request.query.get('role') == 'ROLE_ARTIST' ? 'selected' : '' }}>Artiste</option>
                            <option value="ROLE_ADMIN" {{ app.request.query.get('role') == 'ROLE_ADMIN' ? 'selected' : '' }}>Administrateur</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">Statut</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">Tous les statuts</option>
                            <option value="active" {{ app.request.query.get('status') == 'active' ? 'selected' : '' }}>Actif</option>
                            <option value="inactive" {{ app.request.query.get('status') == 'inactive' ? 'selected' : '' }}>Inactif</option>
                            <option value="verified" {{ app.request.query.get('status') == 'verified' ? 'selected' : '' }}>Vérifié</option>
                            <option value="unverified" {{ app.request.query.get('status') == 'unverified' ? 'selected' : '' }}>Non vérifié</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-2"></i>Filtrer
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {# Statistiques - CORRIGÉ #}
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-primary">
                    <div class="card-body">
                        <h6 class="card-title text-primary">Total utilisateurs</h6>
                        <h2 class="mb-0">{{ users|length }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success">
                    <div class="card-body">
                        <h6 class="card-title text-success">Utilisateurs actifs</h6>
                        <h2 class="mb-0">{{ users|filter(user => user.isActive)|length }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-info">
                    <div class="card-body">
                        <h6 class="card-title text-info">Email vérifiés</h6>
                        <h2 class="mb-0">{{ users|filter(user => user.isVerified)|length }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning">
                    <div class="card-body">
                        <h6 class="card-title text-warning">Administrateurs</h6>
                        <h2 class="mb-0">{{ users|filter(user => user.isAdmin)|length }}</h2>
                    </div>
                </div>
            </div>
        </div>

        {# Table des utilisateurs - CORRIGÉ #}
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Liste des utilisateurs ({{ users|length }})
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Utilisateur</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Statut</th>
                            <th>Créé le</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar me-3">
                                            {{ user.initials }}
                                        </div>
                                        <div>
                                            <strong>{{ user.username }}</strong>
                                            {% if user.isArtist() %}
                                                <span class="badge bg-success badge-sm ms-1">Artiste</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            <span class="badge bg-danger badge-sm">Admin</span>
                                        {% elseif role == 'ROLE_ARTIST' %}
                                            <span class="badge bg-success badge-sm">Artiste</span>
                                        {% elseif role == 'ROLE_USER' %}
                                            <span class="badge bg-secondary badge-sm">Utilisateur</span>
                                        {% else %}
                                            <span class="badge bg-info badge-sm">{{ role|replace({'ROLE_': ''}) }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    {% if user.isActive %}
                                        {% if user.isVerified %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-warning">Non vérifié</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge bg-danger">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : 'N/A' }}</td>
                                <td>
                                    <div class="d-flex justify-content-end gap-1">
                                        <a href="{{ path('app_admin_user_show', {'id': user.id}) }}"
                                           class="btn btn-sm btn-info" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"
                                           class="btn btn-sm btn-warning" title="Éditer">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        {# Bouton activer/désactiver #}
                                        {% if user.isActive %}
                                            <form action="{{ path('app_admin_user_deactivate', {'id': user.id}) }}"
                                                  method="post" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('deactivate' ~ user.id) }}">
                                                <button type="submit" class="btn btn-sm btn-secondary" title="Désactiver">
                                                    <i class="fas fa-toggle-off"></i>
                                                </button>
                                            </form>
                                        {% else %}
                                            <form action="{{ path('app_admin_user_activate', {'id': user.id}) }}"
                                                  method="post" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('activate' ~ user.id) }}">
                                                <button type="submit" class="btn btn-sm btn-success" title="Activer">
                                                    <i class="fas fa-toggle-on"></i>
                                                </button>
                                            </form>
                                        {% endif %}

                                        {# Bouton vérifier email #}
                                        {% if not user.isVerified %}
                                            <form action="{{ path('app_admin_user_verify', {'id': user.id}) }}"
                                                  method="post" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('verify' ~ user.id) }}">
                                                <button type="submit" class="btn btn-sm btn-primary" title="Vérifier email">
                                                    <i class="fas fa-check-circle"></i>
                                                </button>
                                            </form>
                                        {% endif %}

                                        {# Bouton supprimer #}
                                        <form action="{{ path('app_admin_user_delete', {'id': user.id}) }}"
                                              method="post" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="fas fa-users fa-2x text-muted mb-2"></i>
                                    <p class="text-muted">Aucun utilisateur trouvé</p>
                                    <a href="{{ path('app_admin_user_new') }}" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus me-1"></i> Créer un utilisateur
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Pagination #}
        {% if total_pages is defined and total_pages > 1 %}
            <nav aria-label="Pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    {% if current_page > 1 %}
                        <li class="page-item">
                            <a class="page-link"
                               href="{{ path('app_admin_user_index', app.request.query.all|merge({'page': current_page - 1})) }}">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    {% endif %}

                    {% for i in range(1, total_pages) %}
                        {% if i == current_page %}
                            <li class="page-item active">
                                <span class="page-link">{{ i }}</span>
                            </li>
                        {% else %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path('app_admin_user_index', app.request.query.all|merge({'page': i})) }}">
                                    {{ i }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}

                    {% if current_page < total_pages %}
                        <li class="page-item">
                            <a class="page-link"
                               href="{{ path('app_admin_user_index', app.request.query.all|merge({'page': current_page + 1})) }}">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Forcer Bootstrap JS même si le thème ne le charge pas #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-close les alertes après 5 secondes
            setTimeout(() => {
                document.querySelectorAll('.alert').forEach(alert => {
                    if (alert.classList.contains('show')) {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                });
            }, 5000);

            // Confirmation pour les actions importantes
            document.querySelectorAll('form[action*="delete"]').forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')) {
                        e.preventDefault();
                    }
                });
            });

            // Confirmation pour activer/désactiver
            document.querySelectorAll('form[action*="activate"], form[action*="deactivate"]').forEach(form => {
                form.addEventListener('submit', function(e) {
                    const isActivate = form.action.includes('activate');
                    const action = isActivate ? 'activer' : 'désactiver';
                    if (!confirm(`Êtes-vous sûr de vouloir ${action} cet utilisateur ?`)) {
                        e.preventDefault();
                    }
                });
            });

            // Confirmation pour vérifier email
            document.querySelectorAll('form[action*="verify"]').forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Êtes-vous sûr de vouloir marquer cet email comme vérifié ?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
{% endblock %}