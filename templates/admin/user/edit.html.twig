{# templates/admin/user/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur {{ user.username }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h1 class="h3 mb-0">
                            <i class="fas fa-user-edit me-2"></i>Modifier l'utilisateur
                        </h1>
                        <p class="mb-0 text-muted">{{ user.email }}</p>
                    </div>
                    <div class="card-body">
                        {# Flash messages #}
                        {% for type in ['success', 'error', 'warning'] %}
                            {% for message in app.flashes(type) %}
                                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                                    {% if type == 'success' %}
                                        <i class="fas fa-check-circle me-2"></i>
                                    {% elseif type == 'error' %}
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                    {% else %}
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                    {% endif %}
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {# Formulaire simple pour edit #}
                        {{ include('admin/user/_simple_form.html.twig', {
                            'button_label': 'Mettre à jour',
                            'user': user
                        }) }}

                        <div class="mt-4 text-center">
                            <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-info me-2">
                                <i class="fas fa-eye me-1"></i>Voir les détails
                            </a>
                            <a href="{{ path('app_admin_user_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
