{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoCreatorsHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            max-width: 420px;
            margin: 80px auto;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            padding: 40px 35px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08), 0 4px 6px rgba(0,0,0,0.05);
            border: 1px solid rgba(0,0,0,0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .login-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1), 0 5px 15px rgba(0,0,0,0.07);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e9ecef;
        }

        .login-header h1 {
            color: #2c3e50;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .login-header i {
            color: #28a745;
            font-size: 32px;
            margin-bottom: 15px;
            display: inline-block;
            background: linear-gradient(135deg, #28a745, #20c997);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 8px;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
        }

        .form-control:hover {
            border-color: #adb5bd;
        }

        .btn-login {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
            padding: 14px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            letter-spacing: 0.5px;
        }

        .btn-login:hover {
            background: linear-gradient(135deg, #218838 0%, #1ba87e 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .link-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #eaeaea;
        }

        .register-link, .reset-link {
            font-size: 14px;
        }

        .register-link a {
            color: #28a745;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .register-link a:hover {
            color: #218838;
            text-decoration: underline;
        }

        .reset-link a {
            color: #dc3545;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .reset-link a:hover {
            color: #c82333;
            text-decoration: underline;
        }

        .reset-link i {
            color: #dc3545;
        }

        .admin-redirect {
            margin-top: 25px;
            padding: 18px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 10px;
            text-align: center;
            border: 1px dashed #adb5bd;
        }

        .admin-redirect p {
            color: #6c757d;
            margin-bottom: 12px;
            font-size: 14px;
        }

        .admin-redirect .btn {
            padding: 8px 20px;
            font-size: 13px;
            border-radius: 6px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .admin-redirect .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .test-credentials {
            margin-top: 25px;
            padding: 20px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 10px;
            border: 1px solid #dee2e6;
        }

        .test-credentials h6 {
            color: #495057;
            font-weight: 600;
            font-size: 15px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .test-credentials h6 i {
            color: #28a745;
            font-size: 18px;
        }

        .credential-item {
            margin-bottom: 12px;
        }

        .credential-item:last-child {
            margin-bottom: 0;
        }

        .credential-item small {
            color: #6c757d;
            font-size: 12px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .credential-item strong {
            color: #212529;
            font-size: 14px;
            font-weight: 600;
            display: block;
            margin-top: 3px;
            padding: 5px 10px;
            background: white;
            border-radius: 5px;
            border: 1px solid #e9ecef;
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
            border: 1px solid #c3e6cb;
            border-radius: 10px;
            padding: 20px;
        }

        .alert-danger {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 15px;
            animation: shake 0.5s ease-in-out;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            z-index: 10;
        }

        .password-toggle:hover {
            color: #495057;
        }

        .password-container {
            position: relative;
        }

        .remember-me {
            margin-top: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .remember-me input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .remember-me label {
            color: #6c757d;
            font-size: 14px;
            cursor: pointer;
            user-select: none;
        }

        @media (max-width: 576px) {
            .login-container {
                margin: 40px 20px;
                padding: 30px 25px;
            }

            .link-container {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .login-header h1 {
                font-size: 24px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="login-container">
            <div class="login-header">
                <i class="fas fa-lock"></i>
                <h1>Connexion</h1>
                <p class="text-muted" style="font-size: 14px;">Acc√©dez √† votre espace EcoCreatorsHub</p>
            </div>

            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-circle me-3" style="font-size: 20px;"></i>
                        <div>
                            <strong class="me-2">Erreur :</strong>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-3" style="font-size: 20px;"></i>
                        <div>{{ message }}</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% if app.user %}
                <div class="alert alert-success">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                        <div>
                            <strong style="color: #155724;">‚úÖ D√©j√† connect√© !</strong><br>
                            <span class="text-muted">Email : {{ app.user.email }}</span>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="d-grid gap-2">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin_dashboard') }}" class="btn btn-primary">
                                    <i class="fas fa-tachometer-alt me-2"></i>Tableau de bord Admin
                                </a>
                            {% else %}
                                <a href="{{ path('app_home') }}" class="btn btn-success">
                                    <i class="fas fa-home me-2"></i>Retour √† l'accueil
                                </a>
                            {% endif %}

                            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>D√©connexion
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <form method="post" action="{{ path('app_login') }}" class="login-form" id="loginForm">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="mb-4">
                        <label for="username" class="form-label">
                            <i class="fas fa-envelope me-1"></i> Adresse Email
                        </label>
                        <input type="email"
                               id="username"
                               name="email"
                               value="{{ last_username|default('admin@test.com') }}"
                               class="form-control"
                               required
                               autofocus
                               autocomplete="email"
                               placeholder="saisissez votre email">
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">
                            <i class="fas fa-key me-1"></i> Mot de passe
                        </label>
                        <div class="password-container">
                            <input type="password"
                                   id="password"
                                   name="password"
                                   value="admin123"
                                   class="form-control"
                                   required
                                   autocomplete="current-password"
                                   placeholder="saisissez votre mot de passe">
                            <button type="button" class="password-toggle" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="remember-me mb-4">
                        <input type="checkbox" id="remember_me" name="_remember_me">
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-login" id="submitBtn">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </button>
                    </div>

                    <div class="link-container">
                        <div class="register-link">
                            <p class="mb-0">
                                <i class="fas fa-user-plus me-1"></i>
                                Pas encore de compte ?
                                <a href="{{ path('app_register') }}">Cr√©er un compte</a>
                            </p>
                        </div>

                        <div class="reset-link">
                            <p class="mb-0">
                                <i class="fas fa-key me-1"></i>
                                <a href="http://localhost:8000/reset-password/">Mot de passe oubli√© ?</a>
                            </p>
                        </div>
                    </div>
                </form>

                {% if is_granted('ROLE_ADMIN') is empty %}
                    <div class="admin-redirect">
                        <p class="mb-2">
                            <i class="fas fa-shield-alt me-1"></i>
                            <strong>Acc√®s administrateur</strong>
                        </p>
                        <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard Admin
                        </a>
                    </div>
                {% endif %}

                <div class="test-credentials">
                    <h6>
                        <i class="fas fa-vial"></i>
                        Identifiants de test
                    </h6>

                    <div class="credential-item">
                        <small>Email de test</small>
                        <strong>admin@test.com</strong>
                    </div>

                    <div class="credential-item">
                        <small>Mot de passe de test</small>
                        <strong>admin123</strong>
                    </div>

                    <div class="credential-item mt-3">
                        <small>Pour d√©mo rapide</small>
                        <strong style="color: #28a745; font-size: 13px;">
                            <i class="fas fa-info-circle me-1"></i>
                            Cliquez sur "Se connecter" pour acc√©der directement
                        </strong>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion du basculement de visibilit√© du mot de passe
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('password');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    const icon = this.querySelector('i');
                    if (type === 'password') {
                        icon.classList.remove('fa-eye-slash');
                        icon.classList.add('fa-eye');
                    } else {
                        icon.classList.remove('fa-eye');
                        icon.classList.add('fa-eye-slash');
                    }
                });
            }

            // Gestion de l'animation du bouton de connexion
            const form = document.getElementById('loginForm');
            const submitBtn = document.getElementById('submitBtn');

            if (form && submitBtn) {
                form.addEventListener('submit', function(e) {
                    // Validation basique
                    const email = document.getElementById('username').value;
                    const password = document.getElementById('password').value;

                    if (!email || !password) {
                        e.preventDefault();
                        return;
                    }

                    // Animation du bouton
                    submitBtn.innerHTML = `
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        Connexion en cours...
                    `;
                    submitBtn.disabled = true;
                    submitBtn.classList.add('disabled');

                    // Ajout d'un l√©ger d√©lai pour voir l'animation
                    setTimeout(() => {
                        // Permet √† l'envoi du formulaire de continuer
                    }, 100);
                });
            }

            // Animation d'entr√©e pour le container
            const loginContainer = document.querySelector('.login-container');
            if (loginContainer) {
                loginContainer.style.opacity = '0';
                loginContainer.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    loginContainer.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    loginContainer.style.opacity = '1';
                    loginContainer.style.transform = 'translateY(0)';
                }, 100);
            }

            // Auto-remplissage pour la d√©mo
            const demoEmail = 'admin@test.com';
            const demoPassword = 'admin123';

            // V√©rifie si les champs sont vides et les remplit avec les identifiants de d√©mo
            const emailField = document.getElementById('username');
            const passwordField = document.getElementById('password');

            if (emailField && !emailField.value) {
                emailField.value = demoEmail;
            }

            if (passwordField && !passwordField.value) {
                passwordField.value = demoPassword;
            }

            // Effet de focus sur les champs
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
            });

            // Message de bienvenue dans la console
            console.log('%cüåü Bienvenue sur EcoCreatorsHub üåü', 'color: #28a745; font-size: 16px; font-weight: bold;');
            console.log('%cConnectez-vous pour acc√©der √† toutes les fonctionnalit√©s !', 'color: #6c757d;');
        });
    </script>
{% endblock %}